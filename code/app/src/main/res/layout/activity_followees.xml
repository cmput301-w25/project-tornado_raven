<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp">

    <!-- Title: Followers -->
    <TextView
        android:id="@+id/textFollowersTitle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/title_common_space"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnViewFollowRequests"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginBottom="16dp" />
    <Button
        android:id="@+id/btnViewFollowRequests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="12dp"
        android:text="View Follow Requests"
        app:layout_constraintTop_toTopOf="@+id/textFollowersTitle"
        app:layout_constraintBottom_toBottomOf="@+id/textFollowersTitle"
        app:layout_constraintStart_toEndOf="@id/textFollowersTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />
    <!-- RecyclerView for Followers -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerFollowees"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textFollowersTitle"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/item_follower" />
    <!-- Bottom Navigation Toolbar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/menu_bottom_navigation"
        app:labelVisibilityMode="labeled"
        android:layout_gravity="bottom"
        app:itemHorizontalTranslationEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
