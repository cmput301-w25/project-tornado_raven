<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:background="@color/white">
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_media_previous"
        android:layout_gravity="start"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="sans-serif-black"
        android:text="ADDING MOOD"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/selectemotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Emotion"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/reasonButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reason (Max 22 char)"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/uploadPhotoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload background photo"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/socialSituationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Social Situation"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/attachLocationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Attach Location"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit (Or store it offline upload later)"
        android:layout_marginTop="10dp"/>


</LinearLayout>

