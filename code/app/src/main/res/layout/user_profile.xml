<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile_placeholder"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp" />

    <!-- Follow Button -->
    <Button
        android:id="@+id/btnFollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Follow"
        android:layout_below="@id/profileImage"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#00D4AA"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp" />

    <!-- Mood Update Section -->
    <TextView
        android:id="@+id/moodTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latest Mood (Invisible if GPS is off)"
        android:textSize="14sp"
        android:textColor="#888888"
        android:layout_below="@id/btnFollow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/moodStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am attending a crazy party! Come join us in Aliceâ€™s home."
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_below="@id/moodTitle"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:background="#E0E0E0"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/moodTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 hr ago"
        android:textSize="12sp"
        android:textColor="#777777"
        android:layout_below="@id/moodStatus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />
</RelativeLayout>